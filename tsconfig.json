{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist_electron",
    // "rootDir": "./src", // Temporarily remove rootDir
    "composite": true,
    "declaration": true
  },
  "include": ["src/main/**/*.ts", "src/preload/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "src/renderer", "dist_electron", "dist_renderer"]
}
